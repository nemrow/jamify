<div class="api_test">
	<h3>Find User by Email</h3>
	<p>GET request to: <%= root_url %>api/users/:email</p>
	<form id="find_user_by_email">
		<input type="text" name="email" placeholder="email">
		<input type="submit" value="find user">
	</form>

	<script type="text/javascript">
		$('#find_user_by_email').submit(function(e){
			e.preventDefault();
			var email = $("#find_user_by_email input[name=email]").val();
			$.ajax({
	        url: '<%= root_url %>api/users/'+email,
	        type: 'GET'
	    }).done(function(data){
	    	console.log(data)
	    });
		});
	</script>
</div>