<h1>Dev Center</h1>
<h2>This is to test api calls</h2>

<div class="api_test">
	<h3>New User</h3>
	<p>POST request to: <%= root_url %>api/users</p>
	<p>{"new_user"=>{"first_name"=>"Jordan", "last_name"=>"Nemrow", "email"=>"Nemrowj@gmail.com", "sc_id"=>"123456"}}</p>
	<form id="new_user">
		<input type="text" name="new_user[first_name]" placeholder="first name">
		<input type="text" name="new_user[last_name]" placeholder="last name">
		<input type="text" name="new_user[email]" placeholder="email">
		<input type="text" name="new_user[sc_id]" placeholder="soundcloud id">
		<input type="submit" value="create new user">
	</form>

	<script type="text/javascript">
		$('#new_user').submit(function(e){
			e.preventDefault();
			$.ajax({
	        url: '<%= root_url %>api/users',
	        type: 'POST',
	        data : $('#new_user').serialize()
	    }).done(function(data){
	    	console.log(data)
	    });
		});
	</script>
</div>

